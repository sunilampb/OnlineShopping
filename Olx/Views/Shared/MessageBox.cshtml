 @model Olx.Models.ContactModel
<style>
    textarea {
    }
</style>
   @using (Ajax.BeginForm("reply", "home", new { MessageId = ViewBag.MessageId }, new AjaxOptions
   {
       OnSuccess = "hideMsgBox"
   }))
   {
       var msgboxId = "msgbox" + ViewBag.MessageId;
       <div id="@msgboxId" style="width: 300px;padding: 3px;margin-left:150px;">
        @Html.HiddenFor(m => m.AdId)
        @Html.HiddenFor(m => m.UserId)
        @Html.TextAreaFor(m => m.Message, new { @class = "msgbox" })
       
       <div style="text-align:right;">
           <input type="submit" value="Send" style="margin-left: 190px;
                                                                        height: 22px;
                                                                        width: 60px;
                                                                        background-color: blue;
                                                                        color: white;
                                                                        padding: 0px;
                                                                        font-size: 10pt;" />
       </div>
           </div>
   }
<script type="text/javascript">
    function hideMsgBox(data) {
        var msgboxId = "#msgbox" + data.id;
        alert(msgboxId);
        if (data.status == 1) {
            $(msgboxId).fadeOut(2000);
            alert('Your message has been sent');
        }
        else {
            alert('Sorry there was error in sending reply');
        }
    }
</script>
