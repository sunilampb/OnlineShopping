@using Olx
<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <title>Auction Guru - Buy Sell Classifieds</title>
        <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
        <meta name="viewport" content="width=device-width" />
        @Styles.Render("~/Content/css")
        @Scripts.Render("~/bundles/modernizr")
    </head>
    <body>
        <header>
            <div class="content-wrapper">
                <div class="float-left">
                    <p class="site-title"><img src="~/Images/logo.png" /></p>
                </div>
                <div class="float-right">
                    <section id="login">
                         <ul id="loginMenu">
                             @if(!UserContext.IsAuthenticated)
                             {
                              <li>@Html.ActionLink("Login", "Login", "Account")</li>
                             }
                             else 
                             {  
                                 <li>@Html.ActionLink(UserContext.UserEmail+" [Logout]", "Logout", "Account")</li>
                             }
                            <li>@Html.ActionLink("Signup", "Signup", "Account")</li>
                        </ul>
                    </section>
                    <nav>
                        <ul id="menu">
                            <li>@Html.ActionLink("Home", "search", "Home")</li>
                            <li>@Html.ActionLink("Inbox", "Inbox", "Home")</li>
                            <li>@Html.ActionLink("Post Ad", "PostAd", "Ad")</li>
                            <li>@Html.ActionLink("About", "About", "Home")</li>
                            <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                        </ul>
                    </nav>
                </div>
            </div>
        </header>
        <div id="body">
            @RenderSection("featured", required: false)
            <section class="content-wrapper main-content clear-fix">
                @RenderBody()
            </section>
        </div>
        <footer>
            <div class="content-wrapper">
                <div class="float-left">
                    <p>&copy; @DateTime.Now.Year - My ASP.NET MVC Application</p>
                </div>
            </div>
        </footer>

        @Scripts.Render("~/bundles/jquery")
         @Scripts.Render("~/bundles/jqueryui")
        @RenderSection("scripts", required: false)
    </body>
</html>
